@import './common.styl'

$CANONIC_WIDTH = 1440
$OFFSET = 312
$CANONIC_WIDTH_M = 375
$OFFSET_M = 70

$ARTICLE_WIDTH = ($CANONIC_WIDTH - $OFFSET) / $CANONIC_WIDTH * 100vw * 2
$ARTICLE_HALF_WIDTH = ($CANONIC_WIDTH - $OFFSET) / $CANONIC_WIDTH * 100vw
$ARTICLE_WIDTH_M = ($CANONIC_WIDTH_M - $OFFSET_M) / $CANONIC_WIDTH_M * 100vw * 2
$ARTICLE_HALF_WIDTH_M = ($CANONIC_WIDTH_M - $OFFSET_M) / $CANONIC_WIDTH_M * 100vw
$SHIFT = -($CANONIC_WIDTH - $OFFSET * 2) / $CANONIC_WIDTH * 100vw
$SHIFT_M= -($CANONIC_WIDTH_M - $OFFSET_M * 2) / $CANONIC_WIDTH_M * 100vw

.english,
.panel-left,
.panel-right {
  background: #fff;
}

.english,
.russian {
  transition: left 0.3s background 0.3s, color 0.3s;
}

.active a,
a {
  text-decoration: none;
}

.english-nav,
.panel-container a,
a {
  border-bottom: 1px solid;
}

.lang,
.nav {
  z-index: 999;
}

.en,
.nav,
.ru {
  text-transform: uppercase;
}

html
  font-size: ($ROOT_FONT_SIZE / $CANONICAL_SCREEN_WIDTH * 100) vw
  line-height: 1.3;
  font-feature-settings: "liga", "dlig"
  font-kerning: normal
  font-family: Wremena-Light;

  +mobile()
    font-size: ($ROOT_FONT_SIZE / $CANONICAL_SCREEN_WIDTH_M * 100) vw

body,
html {
  overflow-x: hidden;
}

@-ms-viewport {
  width: device-width;
}

h1 {
  text-align: center;
  font-family: IDEOLOGY, sans-serif;
  text-subheader();
}

h2
  text-subheader()
  text-align: center
  text-stroke: 1px #000
  text-fill-color: transparent
  -webkit-text-stroke: 1px #000
  -webkit-text-fill-color: transparent
  +mobile()
    margin-top: pxToRem(5)
    font-size: pxToRem(24)

.nav,
sup {
  font-family: IDEOLOGY;
}

.date
{
  text-stroke: 1px #000;
  text-fill-color: transparent;
  -webkit-text-stroke: 1px #000;
  -webkit-text-fill-color: transparent;
  display: block;
  font-variant-numeric: oldstyle-nums;
  letter-spacing: pxToRem(-2);
}

.nav-container,
.panel-container
  display: flex;
  width: $ARTICLE_WIDTH;
  height: 100%;
  z-index: 10000
  +mobile()
    width: $ARTICLE_WIDTH_M;

.page-container {
  position: relative;
}

.panel-container {
  left: 0;
  display: flex;
  flex-direction: row;
}

.nav-container {
  display: flex;
  flex-direction: row;
  top: 0;
  position: fixed;
}

.english-nav,
.nav {
  display: flex;
}

article.panel-container:first-of-type .panel
  padding-top: pxToRem(35);
  +mobile()
    padding-top: pxToRem(75);

.panel
  width: $ARTICLE_HALF_WIDTH;
  padding: pxToRem(30) pxToRem(60) pxToRem(150);
  +mobile()
    padding: pxToRem(30) pxToRem(12) pxToRem(60);
    width: $ARTICLE_HALF_WIDTH_M;

.quote-section + .panel-container
  .panel
    padding-top: pxToRem(150)
    +mobile()
      padding-top: pxToRem(60)

.panel-container + .panel-container
  .panel
    padding-top: pxToRem(0)

footer .panel {
  padding: 1.5vw 3vw;
}

.inner p:first-of-type {
  text-indent: 0;
}

.inner p {
  text-indent: pxToRem(50);
  text-feed-body();
  hyphens: auto;
}

.text {
  line-height: 1.15;
}

figure
  padding: pxToRem(30) 0
  width: 100%
  +mobile()
    padding: pxToRem(8) 0

figure img,
figure video {
  width: 100%;
  object-fit: contain;
  object-fit: cover;
  object-position: top;
}

.english {
  color: #000;
}

.russian {
  background: #000;
  color: #fff;
}

.active,
.active a {
  transition: background 0.3s, color 0.3s;
  background: #fff;
  color: #000;
}

.not-active,
.not-active a {
  transition: background 0.3s, color 0.3s;
  background: #000;
}

.active img,
.active video {
  filter: invert(0) grayscale(100%);
}

.not-active {
  color: #fff;
}

.not-active a {
  color: #fff !important;
}

.english-active,
.russian-active {
  transition: left 0.3s, background 0.3s, color 0.3s;
}

.not-active img,
.not-active video {
  filter: invert(100%) grayscale(100%);
}

.english-active {
  left: 0 !important;
}

.russian-active
  left: $SHIFT !important;
  +mobile()
    left: $SHIFT_M !important;

a,
a:hover {
  transition: border-color 0.3s;
}

sup {
  font-variant-position: super;
  vertical-align: baseline;
  position: relative;
  top: -0.3em;
  font-size: 0.7em;
  border-bottom: 0.1em solid;
  margin: 0 0.3em;
}

.nav
  height: auto;
  width: $ARTICLE_WIDTH;
  display: flex;
  align-items: center;
  align-content: space-between;
  justify-content: space-between;
  padding: 0;
  text-site-header();
  +mobile()
    width: $ARTICLE_WIDTH_M

.english-nav,
.russian-nav {
  width: 100vw;
  padding: 1vw 4vw;
  align-content: space-between;
  height: 100%;
  +mobile() {
    padding: pxToRem(14);
  }
}

a {
  color: #000;
  border-color: transparent;
}

a:hover {
  border-color: #000;
}

.english-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 0;
}

.russian-nav {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid;
  border-bottom: 0;
}

.english-nav.active,
.english-nav.not-active,
.russian-nav.active,
.russian-nav.not-active {
  background: 0 0;
  padding-bottom: 5vw;
  +mobile() {
    padding-bottom: pxToRem(12);
  }
}

.english-nav:after
  position: absolute;
  content: "";
  top: 0;
  left: 0;
  width: $ARTICLE_HALF_WIDTH;
  height: 100%;
  background: linear-gradient(0deg, transparent 0, #000 50%);
  transition: opacity 0.3s, color 0.3s;
  opacity: 0;
  +mobile()
    width: $ARTICLE_HALF_WIDTH_M;

.english-nav:before,
.russian-nav:after
  background: linear-gradient(0deg, rgba(255, 255, 255, 0) 0, #fff 50%);
  position: absolute;
  content: "";
  top: 0;
  width: $ARTICLE_HALF_WIDTH;
  height: 100%;
  transition: opacity 0.3s, color 0.3s;
  +mobile()
    height: 150%;
    width: $ARTICLE_HALF_WIDTH_M;

.english-nav.not-active:after
  opacity: 1;
  transition: opacity 0.3s, color 0.3s;

.russian-nav:after
  left: $ARTICLE_HALF_WIDTH;
  opacity: 0;
  +mobile()
    left: $ARTICLE_HALF_WIDTH_M;

.russian-nav.active:after
  opacity: 1;
  transition: opacity 0.3s, color 0.3s;


.english-nav:before
  left: 0;
  opacity: 0;

.english-nav.active:before
  opacity: 1;
  transition: opacity 0.3s, color 0.3s;

.russian-nav:before
  position: absolute;
  content: "";
  top: 0;
  left: $ARTICLE_HALF_WIDTH;
  width: $ARTICLE_HALF_WIDTH;
  height: 100%;
  background: linear-gradient(0deg, transparent 0, #000 50%);
  transition: opacity 0.3s, color 0.3s;
  opacity: 0;
  +mobile()
    height: 150%;
    left: $ARTICLE_HALF_WIDTH_M;
    width: $ARTICLE_HALF_WIDTH_M;

.bubble-wrap,
canvas
  width: $ARTICLE_HALF_WIDTH;
  height: 100vh;
  +mobile()
    width: $ARTICLE_HALF_WIDTH_M;

.russian-nav.not-active:before
  opacity: 1;
  transition: opacity 0.3s, color 0.3s;

.english-nav.active a,
.english-nav.not-active a,
.russian-nav.active a,
.russian-nav.not-active a {
  background: 0 0;
  z-index: 999;
}

.lang {
  position: relative;
}

.en {
  color: #fff;
}

.hidden {
  opacity: 0;
  visibility: hidden;
  position: absolute;
  transition: background 0.3s, color 0.3s;
}

.en,
.ru {
  cursor: pointer;
  margin-left: 30vw;
  opacity: 1;
  transition: opacity 0.3s, background 0.3s, color 0.3s;
}

img {
  position: relative;
  z-index: 9001 !important;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@keyframes fadeInOut {
  0%,
  100% {
    opacity: 0;
  }
  50% {
    opacity: 0.8;
  }
}

.bubble-wrap {
  transition: left 0.3s;
  overflow: hidden;
  position: fixed;
  left: 0;
  top: 0 !important;
  right: 0;
  bottom: 0 !important;
  pointer-events: none;
  margin: 0;
  padding: 0;
  filter: blur(20px);
  opacity: 0.6;
  animation: fadeInOut 10s infinite;
}

.russian-blob {
  left: 20vw;
  transition: left 0.3s;
}

@media only screen and (max-width: 900px) {
  .date {
    text-stroke: 0.5px #000;
    text-fill-color: transparent;
    -webkit-text-stroke: 0.5px #000;
    -webkit-text-fill-color: transparent;
    display: block;
  }
  h1 {
    font-size: 7vw;
  }
  .en,
  .ru {
    margin-left: 0;
  }
}

+mobile() {
  h1 {
    font-size: pxToRem(24)
    line-height: 1
  }
}

.quote-section
  width: $ARTICLE_WIDTH
  display: flex
  +mobile()
    width: $ARTICLE_WIDTH_M
  &-item
    flex: 1
    padding: pxToRem(30) pxToRem(70) pxToRem(65) pxToRem(60)
    color: #fff
    position: relative
    +mobile()
      padding: pxToRem(12) pxToRem(8) pxToRem(12) pxToRem(16)
    p
      position: relative
    a
      color: inherit
      border-color: inherit
      border-width: pxToRem(2)
      +mobile()
        border-width: pxToRem(1)
    &-cover
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      background-image: url("../assets/images/quote-1-d.jpg")
      filter: blur(pxToRem(14))
      background-size: cover
      background-position: bottom
      background-repeat: no-repeat
      +mobile()
        background-image: url("../assets/images/quote-1-m.jpg")

.english-active
  .quote-section-item--russian
    filter: invert(100%) grayscale(100%)
    background-color: white

.russian-active
  .quote-section-item--english
    filter: invert(100%) grayscale(100%)
    background-color: white

.quote-example .quote-section-item::before
  background-image: url("../assets/images/quote-bg-example.jpg")

.article-h1
  max-width: pxToRem(750)
  margin: 0 auto

.article-read-full-box
  margin-top: pxToRem(30)
  display: flex
  justify-content: center
  +mobile()
    margin-top: pxToRem(12)

.article-read-full
  display: inline-block
  border: pxToRem(1) solid !important
  text-align: center
  padding: pxToRem(13) pxToRem(12) pxToRem(11)
  line-height: 1
  color: black;
  +mobile()
    padding: pxToRem(10) pxToRem(12) pxToRem(9)

.english-active
  .article-read-full--russian
    background: white;

.russian-active
  .article-read-full--english
    background: white;

.authors
  text-align: center
  span
    margin-top: pxToRem(5)
    display: block
  p
    text-align: left
    margin-top: pxToRem(20)
    hyphens: manual
